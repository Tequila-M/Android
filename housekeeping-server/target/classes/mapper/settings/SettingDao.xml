<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.biyesheji.modules.settings.dao.SettingDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.biyesheji.modules.settings.entity.SettingEntity" id="settingMap">
        <result property="id" column="id"/>
        <result property="teacherId" column="teacher_id"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="maxPeople" column="max_people"/>
    </resultMap>

	<select id="queryObject" resultType="com.biyesheji.modules.settings.entity.SettingEntity">
		select * from appoint_setting where id = #{value}
	</select>

	<select id="queryList" resultType="com.biyesheji.modules.settings.entity.SettingEntity">
		select s.*, h.real_name 'teacher.realName' from appoint_setting s left join appoint_teacher h on s.teacher_id = h.id
        <where>
        	<if test="teacherId != null">
				and teacher_id = #{teacherId}
			</if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by s.id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from appoint_setting 
	</select>
	 
	<insert id="save" parameterType="com.biyesheji.modules.settings.entity.SettingEntity" useGeneratedKeys="true" keyProperty="id">
		insert into appoint_setting
		(
			`teacher_id`, 
			`start_time`, 
			`end_time`, 
			`max_people`
		)
		values
		(
			#{teacherId}, 
			#{startTime}, 
			#{endTime}, 
			#{maxPeople}
		)
	</insert>
	 
	<update id="update" parameterType="com.biyesheji.modules.settings.entity.SettingEntity">
		update appoint_setting 
		<set>
			<if test="teacherId != null">`teacher_id` = #{teacherId}, </if>
			<if test="startTime != null">`start_time` = #{startTime}, </if>
			<if test="endTime != null">`end_time` = #{endTime}, </if>
			<if test="maxPeople != null">`max_people` = #{maxPeople}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from appoint_setting where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from appoint_setting where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>